<div class='row'>
    <% @post.each do |post| %>
    <div class='col-md-6 col-lg-4'>
        <div class="card border-danger mb-3 post-card" >
            <% if post.header_image.present? %>
                <div class="header-image" style="background-image: url(<%= url_for(post.header_image) %>);"></div>
            <% end %>
            <div class="card-body d-flex flex-column ">
                    <span class='badge badge-warning text-right mr-2'>
                        <%= time_ago_in_words(post.publish_date) %>
                    </span>

                <h5 class="card-title"><%= post.title %></h5>
                <p class="card-text"><%= truncate(post.description, length:250) %></p>
                <%= link_to 'Read Post', blog_post_path(post), class: 'btn btn-warning mt-auto' %>
               
            </div>
            
        </div>
    </div>
    
    <% end %>
</div>

<div class='mt-3 d-flex justify-content-center '>
  <%= will_paginate @post, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
</div>


