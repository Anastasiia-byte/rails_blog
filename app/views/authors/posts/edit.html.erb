<%= link_to 'Back', posts_path, class: 'btn btn-outline-dark mb-3' %>
<div class="card border-warning mb-3">
  <div class="card-header"><h3>Editing post</h3></div>
  <div class="card-body">
    <%= render 'form', post: @post %>

    <div >

        <div class="mb-1">
        
        <%= form_with(model: [@post, @paragraph]) do |form| %>
            <%= form.hidden_field :element_type, value: 'paragraph' %>
            <%= form.submit "Paragraph", class:"btn btn-secondary mb-3" %>
        <% end %>
        </div>
        
        <% @post.elements.each do |element| %>
            <% if element.persisted? %>
                <div class="paragraph">
                    <%= element.content %>
                </div>
                <div class="form d-none">
                    <%= form_with(model: [@post, element]) do |form| %>
                        <%= form.rich_text_area :content %>
                        <div class="mt-3">
                        <%= form.submit "Save", class:"btn btn-warning" %>
                        <a href='#' class='cancel btn btn-secondary'>Cancel</a>

                        </div>
                    <% end %>

                </div>
            <% end %>
        <% end %>


    </div>
  </div>
</div>


